<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title">拠点情報の修正</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @base, url: base_path(@base), local: true, method: :patch) do |f| %>
          <%= render 'shared/error_messages', object: @base %>

            <%= f.label :base_number, "拠点番号", class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base_number, class: "form-control" %>

            <%= f.label :name, "名前", class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :name, class: "form-control" %>

            <%= f.label :base_type, "拠点種類", class: "label-#{yield(:class_text)}" %>
            <%= f.select :base_type, ["出勤", "退勤"] , include_blank: "--" , class: "form-control" %>

            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-#{yield(:class_text)}" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
